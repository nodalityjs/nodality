{
  "name": "nodality",
  "version": "1.0.50",
  "description": "A lightweight library for declarative UI elements.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "lib/",
    "layout/",
    "dist/"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js"
    }
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "test:jest": "jest",
    "test:playwright": "playwright test",
    "test": "node scripts/generatePlaywright.js && playwright test",
    "postpublish": "sh scripts/postpublish.sh",
    "inject-license": "node scripts/injectLicense.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodalityjs/nodality"
  },
  "author": {
    "name": "Filip Vabrousek",
    "email": "filipvabrousek1@gmail.com",
    "url": "https://filipvabrousek.com"
  },
  "homepage": "https://nodalityjs.github.io/",
  "keywords": [
    "ui",
    "ui-library",
    "user-interface",
    "declarative",
    "declarative-ui",
    "web",
    "frontend",
    "javascript",
    "html",
    "dom",
    "rendering",
    "components",
    "component-based",
    "nodes",
    "nodality",
    "effects",
    "style",
    "open-source"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@playwright/test": "^1.54.1",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.54.1"
  }
}
